{
  "id": "deepshare-controller-rolling",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {"name": "deepshare-rolling"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "deepshare-controller",
           "volumes":[{"name":"logfile", "source":{"hostDir":{"path":"/tmp/log"}}}],
           "containers": [{
             "name": "deepshare",
             "image": "misingularity/deepshare:k8s1.0.1",
             "ports": [{"containerPort": 8080}],
             "env": [{"name":"_DEEPSHARE_URL_BASE_HOST", "value":"http://fds.so"},{"name":"_DEEPSHARE_URL_BASE_PORT", "value":"8080"}],
             "volumeMounts": [{"name": "logfile", "mountPath": "/tmp"}]
           }]
         }
       },
       "labels": {
         "name": "deepshare-rolling",
         "app": "deepshare",
         "uses": "redis-slave,redis-master"
       }
      }},
  "labels": {"name": "deepshare"}
}

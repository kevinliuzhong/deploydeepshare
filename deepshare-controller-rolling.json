{
  "id": "deepshare-controller-rolling",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {"name": "deepshare-rolling"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "deepshare-controller",
           "volumes": [{ "name": "logfile", "path": "/mnt", "hostDir": "/mnt/log"}],
           "containers": [{
             "name": "deepshare",
             "image": "misingularity/deepshare-dev:k8s1.0.1",
             "ports": [{"containerPort": 8080}]
           }]
         }
       },
       "labels": {
         "name": "deepshare-rolling",
         "uses": "redis-slave,redis-master"
       }
      }},
  "labels": {"name": "deepshare"}
}

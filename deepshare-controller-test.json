{
  "id": "deepshare-controller-test",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {"name": "deepshare-test"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "deepshare-controller-test",
           "volumes":[{"name":"logfile", "source":{"hostDir":{"path":"/tmp/logtest"}}}],
           "containers": [{
             "name": "deepshare",
             "image": "misingularity/deepshare:k8s1.0.5",
             "ports": [{"containerPort": 8080}, {"containerPort": 8000}],
             "env": [{"name":"_DEEPSHARE_URL_BASE_HOST", "value":"http://fds.so"},{"name":"_DEEPSHARE_URL_BASE_PORT", "value":"8081"}],
             "volumeMounts": [{"name": "logfile", "mountPath": "/tmp"}]
           }]
         }
       },
       "labels": {
         "name": "deepshare-test",
         "app": "deepshare-test",
         "uses": "redis-master-test"
       }
      }},
  "labels": {"name": "deepshare-test"}
}
